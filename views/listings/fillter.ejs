<%-layout("layouts/boilerplate.ejs")%>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-2 ">
    <%for(listing of listings){%>
        <%if(listing.location == search || listing.location.toLowerCase() == search || listing.country == search ||  listing.country.toLowerCase() == search || search.toLowerCase() == listing.country ){%>
            <a href="/listings/<%=listing._id%>" class="listing-link">
        <div class="card col listing-card">
          <img src="<%=listing.image.url%>" class="card-img-top" style="height:20rem;" alt="listing image">
          <div class="card-img-overlay"></div>
          <div class="card-body">
            <p class="card-text">
              <b>
                <%=listing.title%>
              </b><br>
              &#8377;<%=listing.price.toLocaleString("en-IN")%>/night
              <i class="taxInfo">
                &nbsp; &nbsp; 18%GST
              </i>
            
             
            </p>
          </div>
        </div>
      </a>
        <%}%>
    <%}%>

    <%for(listing of listings){%>
      <%if(listing.category == search){%>
